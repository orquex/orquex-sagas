{
  "id": "flow-simple",
  "name": "Simple Flow",
  "initialStage": "evaluation-stage",
  "stages": {
    "activity-stage": {
      "id": "activity-stage",
      "type": "activity",
      "activityTasks": [
        {
          "task": "default-activity"
        }
      ],
      "outgoing": null
    },
    "evaluation-stage": {
      "id": "evaluation-stage",
      "type": "evaluation",
      "evaluationTask": {
        "task": "default-evaluator"
      },
      "conditions": [
        {
          "expression": "true",
          "outgoing": "activity-impl"
        }
      ],
      "defaultOutgoing": "activity-impl"
    }
  },
  "metadata": {},
  "configuration": {
    "timeout": "PT1S"
  }
}